<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/header") %>

    <title>Blog</title>
</head>

<body>
    <%- include("./partials/navbar") %>
    <div class="container mt-3">
<h1><%= blog.title %></h1>
<img src="<%= blog.coverImgUrl %>" alt="..." width="500px">
<pre class="mt-3"><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <h3>Created By:</h3>
<img src="<%= blog.createdBy.profileImageUrl %>" width="60px" class="rounded-circle"> <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-4">
<h2>Comments(<%= Comments.length %>)</h2>
<% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-4">
            <input type="text" name="content" class="form-control" placeholder="Enter your comment">
            <button class="btn btn-sm btn-primary mt-2" type="submit">Add</button>
        </div>
    </form>
    
<% } %>
<div class="container mt-3">
    <% Comments.forEach(Comment => { %>
        <img src="<%= Comment.createdBy.profileImageUrl %>" width="60px" class="rounded"> <%= Comment.createdBy.fullName %> <pre><%= Comment.content %></pre>
    <% }) %>
        </div>
    </div>
    <%- include("./partials/script") %>
</body>
</html>